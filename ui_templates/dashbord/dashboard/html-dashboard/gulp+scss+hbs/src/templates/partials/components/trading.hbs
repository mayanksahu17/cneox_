<div class="card">
    <div class="card-header">
        <img src="{{path}}assets/images/special-pages/academy/{{tradingImage}}" class="img-fluid " alt="img8">
        <div class="mt-4">
            <span type="button" class="d-flex align-items-center">
            <svg width="7" class="me-1 text-center" viewBox="0 0 7 8" fill="none" xmlns="http://www.w3.org/2000/svg">
                <circle cx="3.5" cy="4" r="3.5" fill="#ff971d"/>
            </svg><span class="text-primary ms-1">{{tradingButton}}</span></span>
        </div>
        <h6 class="mt-3 mb-0">{{tradingTitle}}</h6>
    </div>
    <div class="card-body d-flex  align-items-center gap-4">

        <p class="ms-1 mb-0">{{tradingDate}}</p>                           
        <div class="d-flex align-items-center ">
            
            <p class="ms-1 mb-0">{{tradingTime}}</p>                        
        </div>
    </div>
</div>